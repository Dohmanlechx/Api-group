<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/topPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/movieDetailPoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="?actionBarSize"
            android:scaleType="centerCrop"
            android:src="@drawable/blank_image">
        </ImageView>

        <TextView
            android:id="@+id/movieDetailTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/movieDetailPoster"
            android:layout_alignStart="@+id/movieDetailPoster"
            android:layout_alignLeft="@+id/movieDetailPoster"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:text="Movie Title"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6">
        </TextView>

        <TextView
            android:id="@+id/movieDetailTextYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/movieDetailTextTitle"
            android:layout_alignStart="@+id/movieDetailPoster"
            android:layout_alignLeft="@+id/movieDetailPoster"
            android:clickable="false"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="2008"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"/>

        <TextView
            android:id="@+id/movieDetailTextRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/movieDetailPoster"
            android:layout_alignRight="@+id/movieDetailPoster"
            android:layout_alignBottom="@+id/movieDetailPoster"
            android:padding="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/movieDetailBottomPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topPart">

        <LinearLayout
            android:id="@+id/movieDetailGenreRuntimeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movieDetailTextGenreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/genre"/>

            <TextView
                android:id="@+id/movieDetailTextGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                android:text="Drama"/>

            <TextView
                android:id="@+id/movieDetailTextRuntimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/runtime"/>

            <TextView
                android:id="@+id/movieDetailTextRuntime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128 min"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/movieDetailPlotLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieDetailGenreRuntimeLayout">

            <TextView
                android:id="@+id/movieDetailTextPlotTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Plot:"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/movieDetailTextPlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieDetailTextPlotTitle"
                android:padding="8dp"
                android:text="Cat ipsum dolor sit amet, chase mice. Lick master's hand at first then bite because im moody hide when guests come over, but small kitty warm kitty little balls of fur and reward the chosen human with a slow blink and eat owner's food put toy mouse in food bowl run out of litter box at full speed . Stares at human while pushing stuff off a table fooled again thinking the dog likes me. Prance along on top of the garden fence, annoy the neighbor's dog and make it bark cat is love, cat is life."/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/movieDetailCountryLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieDetailPlotLayout">

            <TextView
                android:id="@+id/movieDetailTextCountryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/countryOfOrigin"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/movieDetailTextCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@+id/movieDetailTextCountryTitle"
                android:text="Far far away"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/movieDetailLanguageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movieDetailCountryLayout">

            <TextView
                android:id="@+id/movieDetailTextLanguageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/spokenLanguage"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/movieDetailTextLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@+id/movieDetailTextLanguageTitle"
                android:text="Gibberish"/>

        </RelativeLayout>

    </RelativeLayout>

    <Toolbar
        android:id="@+id/movieDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/movieDetailToolbarMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_toolbar" />
    </Toolbar>


</RelativeLayout>